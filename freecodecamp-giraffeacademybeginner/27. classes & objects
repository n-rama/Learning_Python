# CLASSES & OBJECTS

# classes are used to create your own data type

class Student:
    def __init__(self, name, major, gpa, is_on_probation):  # initialise function for the attributes of the class. self is always needed, and then the attributes are defined
        self.name = name  # self.attribute is needed for each attribute
        self.major = major
        self.gpa = gpa
        self.is_on_probation = is_on_probation

student1 = Student("Jim", "Business", 3.1, False)
student2 = Student("Pam", "Art", 2.5, True)
print(student1.name)
print(student2.name)
